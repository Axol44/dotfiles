        "t"
      ]
    },
    {
      "before": [
        "T"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "T"
      ]
    },
    {
      "before": [
        "ñ",
        "b"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "b"
      ]
    },
    {
      "before": [
        "ñ",
        "w"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "w"
      ]
    },
    {
      "before": [
        "ñ",
        "e"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "e"
      ]
    },
    {
      "before": [
        "ñ",
        "g",
        "e"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "g",
        "e"
      ]
    },
    {
      "before": [
        "K"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "k"
      ]
    },
    {
      "before": [
        "J"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "j"
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    // surround
    {
      "before": [
